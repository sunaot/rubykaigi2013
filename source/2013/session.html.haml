- session = data.sessions[id]

%h1= session.title

- session.speakers.each do |speaker|
  %h2
    by #{speaker.name}
    - if github = speaker.links.github
      = link_to "(@#{github})", "https://github.com/#{github}"

      - if speaker.gravatar
        = image_tag("http://www.gravatar.com/avatar/#{speaker.gravatar}?s=100", alt: speaker.name)

  %p
    %ul.speakerProfile
      %li= speaker.job
      %li= speaker.bio
      %li= speaker.location

%h2 Description
= session.description
